<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HelpMeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="Widget.App.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/helperButtonThemeOverlay</item>
    </style>
    <style name="helperButtonThemeOverlay">
        <item name="colorPrimary">#6FAE1212</item>
    </style>

    <style name="font_Nav" parent="android:Widget.TextView">
        <item name="fontFamily">@font/bungeeregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="spinnerTheme" parent="android:Widget.Spinner">
        <item name="background">@drawable/bg_spinner</item>
    </style>


    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>

    </style>
    <style name="DialogAnimation" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/scale_enter</item>
        <item name="android:windowExitAnimation">@anim/scale_exit</item>
    </style>

    <style name="Theme.HelpMeApp" parent="Base.Theme.HelpMeApp" />
</resources>