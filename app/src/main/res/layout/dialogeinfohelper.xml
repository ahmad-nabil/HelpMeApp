<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/DataCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mapviewUser"
        app:layout_constraintTop_toBottomOf="@+id/spinner">

        <ImageButton
            android:id="@+id/cancelbtn"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:background="@null"
            android:clickable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cancel"
            tools:srcCompat="@drawable/cancel" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:background="@color/relativeTransparent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/bungeeregular"
                android:text="Your helper in his way to you"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/tickimg"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/textView5"
                android:layout_centerInParent="true"
                android:background="@null"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/tick"
                tools:srcCompat="@drawable/tick" />

            <TextView
                android:id="@+id/Helperid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tickimg"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/bungeeregular"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hisExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Helperid"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/bungeeregular"
                android:textColor="#E3E12B"
                android:textSize="15sp" />

            <RatingBar
                android:id="@+id/levelexp"
                style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hisExperience"
                android:layout_centerHorizontal="true"
                android:numStars="4" />

            <ImageButton
                android:id="@+id/callbtn"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/levelexp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/contact" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>